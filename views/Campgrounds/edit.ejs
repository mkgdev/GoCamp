<% include ../partials/header %>

<div class="container" id="campground-container">
     <h1>Edit <%= campground.name %></h1>
     <div id="campground-form">
    <form action="/campground/<%= campground._id %>/?_method=PUT" method="POST">
        <div class="form-group">
            
            <input type="text" name="campground[name]" value="<%=campground.name %>" class="form-control" >
            <input type="text" name="campground[image]"  value="<%=campground.image %>" class="form-control" >
             <input type="text" name="campground[description]" value="<%=campground.description %>" class="form-control" >
 
            
        </div>
        
        
        <button type="submit" class="btn btn-primary btn-block btn-lg">Submit!</button>
        
    </form>
    </div>
    
    
</div>




