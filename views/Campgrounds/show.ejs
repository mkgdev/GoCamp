<% include ../partials/header %>




<div class="container">
<div class="row">
    
    <div class="col-md-3">
        
        <h1>YelpCamp</h1>
        
        <div class="row">
        
            <div class="col-md-12"  >
            
              <li class="list-group-item active"  >Info 1</li>
       
        
        
            
            </div>
    
            
            <div class="col-md-12"  >
            
              <li class="list-group-item"  >Info 2</li>
       
        

            
            </div>
        
        
        <div class="col-md-12"  >
            
              <li class="list-group-item" >Info 3</li>
       
        

            
            </div>
            
 
        
        
        </div>
   
        
    

    
     
        
        
     
        
    
    </div>
        
        
    <div class="col-md-9">
    <div class="thumbnail" >
    
    
    
    
    <img src="<%= campground.image %>" class="img-responsive" alt="Responsive image" > 
    <div class="caption-full">
        <a href="#"><h4 class="pull-left"><%= campground.name %></h4></a>
        <h4 class="pull-right">$9.00/night</h4>
        
        <div><p><%= campground.description %></p></div> 
        <div><p><em>Submitted by <%= campground.author.username %></em></p></div>
        </div>
        
       <% 
        
        if(currentUser && currentUser._id.equals(campground.author.id))
        {   %>
        <a  href="/campground/<%=campground.id %>/edit" class="btn btn-warning btn-xs">Edit</a>
        
        
        <form action="/campground/<%= campground.id %>/?_method=DELETE" method=POST  id="delete">
            
               <button class="btn btn-danger btn-xs">Delete</button>
        
        
        </form>
      
      <%  }  %>
        
        
        
        
        
               
        
    
    </div>
         
        
        <div class="well" >
            
                 <div class="pull-right" id="addComment"><a href= "/campground/<%= campground._id %>/comment/new" class ="btn btn-success">Add New Comment</a></div> 
   
            
            <% campground.comment.forEach(function(comment) { %>
        <div id="comment">
                  <p><strong><%= comment.author.username %></strong></p>
         <p><%= comment.text %></p>
            
            <% if(currentUser && currentUser._id.equals(comment.author.id)){ %>
            
            
            <a href="/campground/<%= campground._id %>/comment/<%= comment._id %>/edit" class="btn btn-warning btn-xs">Edit</a>
            <form action="/campground/<%= campground._id %>/comment/<%= comment._id %>?_method=DELETE" method=POST id="delete">
            
                <button class="btn btn-danger btn-xs">Delete</button>
                
            </form>
            
            
         <%   } %>
            </div>
  
    <hr>
        
        
        
        
    <% }); %>
        
        </div>
  

</div>

</div>

</div>    



<% include ../partials/footer %>