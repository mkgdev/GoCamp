<% include ../partials/header %>

<div class="container">
   

<div class="jumbotron">
    
    <h1>Welcome to GoCamp!</h1
    <p>View our hand-picked campgrounds from all over the world</p>
    <a href="/campground/new" class="btn btn-primary btn-lg">Add New Campgrounds</a>
    
    
</div>


<div class="row" style="display:flex; flex-wrap:wrap; ">
    
<% Campground.forEach(function(campgrounds){ %>
        
        <div class="col-md-3 col-sm-4"> 
  
 <div class="thumbnail"  id="index-thumbnail">
 
 
  
 <img src="<%= campgrounds.image %>" class="img-responsive" alt="Responsive image" > 
 
 <div class="caption">
     
     <h3><%= campgrounds.name %></h3>
     <a href="/campground/<%= campgrounds._id %>" class=" btn btn-primary"><span class="glyphicon glyphicon-info-sign"></span> More Info</a>
     
     
     </div>
  
  </div>
    
    </div>
<% }); %>




</div>

</div>
<% include ../partials/footer %>